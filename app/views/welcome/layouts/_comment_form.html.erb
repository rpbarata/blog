<% if current_user %>
    <h2>Add a comment:</h2>
    <%= form_for([:users, @user, @article, @article.comments.build ]) do |form| %>
        <div class="row">
            <%= form.text_area :body, rows: "5", class: "form-control" %>
        </div>

        <div class="row">
            <td><%= form.submit "Send", class: "btn btn-primary" %></td>
        </div
    <% end %>
<% end %>