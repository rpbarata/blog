<%= form_with scope: :article, url: users_articles_path, local: true do |form| %>

    <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@article.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div class="form-group">
        <%= form.label :title, class: "control-label" %>
        <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :text, class: "control-label" %>
        <%= form.text_area :text, rows: "15", class: "form-control" %>
    </div>

    <br>

    <div class="form-group">
        <%= form.label :banner, class: "control-label" %>
        <%= form.file_field :banner, class: "form-control-file" %>
    </div>

    <br>

    <div class="form-group">
        <%= form.label :is_published, "Publish", class: "form-check-label" %>
        <%= form.check_box :is_published, class: "checkbox" %>
    </div>
   
    <%= form.submit class: "btn btn-default" %>
<% end %>

<%= link_to 'Back', users_root_path_url, 
    data: {confirm: "Are you sure? All changes will be discarded."},
    class: "btn btn-default"%>