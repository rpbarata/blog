<h1>My Articles</h1>

<table class="table">
    <tbody>
        <% @articles.each do |article| %>
            <% if article.user == current_user%>
                <tr>
                <td><b><%= article.title %></b></td>
                <td><%= h truncate(article.text, :length => 40) %></td>
                <td><%= link_to 'Show', article_path(article) %></td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>