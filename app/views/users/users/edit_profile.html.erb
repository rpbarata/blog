<h1>Edit Profile</h1>

<%= form_for(@user) do |form| %>
 
    <div class="form-group">
        <%= form.label :username, class: "control-label" %>
        <%= form.text_field :username, class: "form-control" %>
    </div>

    <td><%= form.submit "Save", class: "btn btn-default" %></td>
<% end %>


<%= link_to 'Back', users_root_path_url, 
    data: {confirm: "Are you sure? All changes will be discarded."},
    class: "btn btn-default"%>